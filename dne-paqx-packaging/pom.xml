<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.dell.cpsd.paqx.dne</groupId>
        <artifactId>dne-paqx-parent</artifactId>
        <version>1.1-q3stable-SNAPSHOT</version>
    </parent>

    <artifactId>dne-paqx-packaging</artifactId>
    <packaging>pom</packaging>
    
    <licenses>
        <license>
            <name>Eclipse Public License - v 1.0</name>
            <url>http://www.eclipse.org/legal/epl-v10.html</url>
        </license>
    </licenses>
    
    <properties>
        <com.dell.cpsd.ess.version>1.0.0-q3stable-SNAPSHOT</com.dell.cpsd.ess.version>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>com.dell.cpsd</groupId>
            <artifactId>engineering-standards-service-distribution</artifactId>
            <version>${com.dell.cpsd.ess.version}</version>
            <type>tar</type>
            <classifier>service-tar</classifier>
        </dependency>
        
        <dependency>
            <groupId>com.dell.cpsd.paqx.dne</groupId>
            <artifactId>dne-paqx-distribution</artifactId>
            <version>${project.parent.version}</version>
            <type>tar</type>
            <classifier>service-tar</classifier>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <!-- Profile for executing the build in unix -->
            <id>package-unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <build>
                <plugins>
                 <!--run rpm.sh to create RPM, based on parameters described in spec file-->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>rpmbuild-windows</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- Profile for building on Windows-->
            <id>package-windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <!--run rpm.sh to create RPM, based on parameters described in spec file-->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>rpmbuild-unix</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <!-- extract tar dependencies into directory structure-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>

                    <execution>
                        <id>unpack-ess-service-tar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>com.dell.cpsd</includeGroupIds>
                            <includeArtifactIds>engineering-standards-service-distribution</includeArtifactIds>
                            <includes>**</includes>
                        </configuration>
                    </execution>

                    <execution>
                        <id>unpack-dne-paqx-service-tar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>com.dell.cpsd.paqx.dne</includeGroupIds>
                            <includeArtifactIds>dne-paqx-distribution</includeArtifactIds>
                            <includes>**</includes>
                        </configuration>
                    </execution>

                </executions>
            </plugin>


            <!--run rpm.sh to create RPM, based on parameters described in spec file-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <id>rpmbuild-unix</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <!-- Configuration requires Unix with sh installed -->
                        <configuration>
                            <executable>/bin/sh</executable>
                            <arguments>
                                <argument>build/build_rpm.sh</argument>
                                <argument>1.0.0.0</argument>
                                <argument>1</argument>
                            </arguments>
                            <workingDirectory>${basedir}</workingDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>rpmbuild-windows</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <!-- Configuration requires Windows with Cygwin with bash.exe installed -->
                        <configuration>
                            <executable>bash.exe</executable>
                            <arguments>
                                <argument>build/build_rpm.sh</argument>
                                <argument>1.0.0.0</argument>
                                <argument>1</argument>
                            </arguments>
                            <workingDirectory>${basedir}</workingDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-5</version>
                <configuration>
                    <descriptors>
                        <descriptor>assembly/assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
